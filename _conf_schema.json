{
  "ocr_config": {
    "description": "OCR 视觉模型配置",
    "type": "object",
    "items": {
      "api_url": { "description": "API 地址", "type": "string", "default": "https://api.openai.com/v1" },
      "api_key": { "description": "API Key", "type": "string" },
      "model_name": { "description": "模型名称", "type": "string", "default": "gpt-4o" }
    }
  },
  "screenshot_config": {
    "description": "网页截图/代理/加载设置",
    "type": "object",
    "items": {
      "proxy_url": { "description": "HTTP代理地址", "type": "string", "default": "" },
      "width": { "description": "视口宽度", "type": "int", "default": 1920 },
      "height": { "description": "视口高度", "type": "int", "default": 1080 },
      "enable_adblock": { "description": "开启强力去广告", "type": "bool", "default": true },
      "adblock_list_url": { 
        "description": "广告规则订阅源(Hosts格式)", 
        "type": "string", 
        "default": "https://raw.githubusercontent.com/AdAway/adaway.github.io/master/hosts.txt" 
      },
      "enable_auto_scroll": { "description": "开启自动滚动", "type": "bool", "default": true },
      "custom_block_list": {
        "description": "自定义屏蔽关键词",
        "type": "list",
        "default": ["*googleads*", "*doubleclick*", "*cnzz*", "*baidu.com/pos*"],
        "items": { "type": "string" }
      }
    }
  }
}
